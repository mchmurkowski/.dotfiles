alias e="emacsclient --no-wait --reuse-frame --alternate-editor=''"
alias en="emacsclient --no-wait --create-frame --alternate-editor=''"
alias et="emacsclient --no-window-system --alternate-editor=''"

alias ping="ping -c 5"

# be verbose about file operations
alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -v"
alias mkdir="mkdir -pv"
alias rmdir="rmdir -v"

# modern alternatives to popular commands
alias cat="bat -pp"
alias cd="z"
alias fetch="fastfetch"
alias find="fd"
alias grep="rg"
alias ls="eza -x --group-directories-first"
alias tree="eza --tree"
